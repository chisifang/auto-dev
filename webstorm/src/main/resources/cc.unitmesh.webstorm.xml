<idea-plugin package="cc.unitmesh.ide.webstorm">
    <!--suppress PluginXmlValidity -->
    <dependencies>
        <plugin id="JavaScript"/>
    </dependencies>

    <extensions defaultExtensionNs="cc.unitmesh">
        <classContextBuilderNew language="JavaScript" implementationClass="cc.unitmesh.ide.webstorm.context.JavaScriptClassContextBuilder"/>
        <classContextBuilderNew language="Typescript" implementationClass="cc.unitmesh.ide.webstorm.context.JavaScriptClassContextBuilder"/>

        <methodContextBuilderNew language="JavaScript" implementationClass="cc.unitmesh.ide.webstorm.context.JavaScriptMethodContextBuilder"/>
        <methodContextBuilderNew language="Typescript" implementationClass="cc.unitmesh.ide.webstorm.context.JavaScriptMethodContextBuilder"/>

        <fileContextBuilderNew language="JavaScript" implementationClass="cc.unitmesh.ide.webstorm.context.JavaScriptFileContextBuilder"/>
        <fileContextBuilderNew language="Typescript" implementationClass="cc.unitmesh.ide.webstorm.context.JavaScriptFileContextBuilder"/>

        <variableContextBuilderNew language="JavaScript" implementationClass="cc.unitmesh.ide.webstorm.context.JavaScriptVariableContextBuilder"/>
        <variableContextBuilderNew language="Typescript" implementationClass="cc.unitmesh.ide.webstorm.context.JavaScriptVariableContextBuilder"/>

        <chatContextProviderNew implementation="cc.unitmesh.ide.webstorm.provider.JavaScriptContextProvider"/>

        <codeModifierNew language="JavaScript" implementationClass="cc.unitmesh.ide.webstorm.provider.testing.JestCodeModifier"/>
        <codeModifierNew language="TypeScript" implementationClass="cc.unitmesh.ide.webstorm.provider.testing.JestCodeModifier"/>

        <contextPrompterNew language="JavaScript" implementation="cc.unitmesh.ide.webstorm.provider.JavaScriptContextPrompter"/>
        <contextPrompterNew language="Typescript" implementation="cc.unitmesh.ide.webstorm.provider.JavaScriptContextPrompter"/>

        <devFlowProviderNew language="JavaScript" implementation="cc.unitmesh.ide.webstorm.provider.JavaScriptAutoDevFlow"/>
        <devFlowProviderNew language="Typescript" implementation="cc.unitmesh.ide.webstorm.provider.JavaScriptAutoDevFlow"/>

        <promptStrategyNew language="JavaScript" implementation="cc.unitmesh.ide.webstorm.provider.JavaScriptPromptStrategyAdvisor"/>
        <promptStrategyNew language="Typescript" implementation="cc.unitmesh.ide.webstorm.provider.JavaScriptPromptStrategyAdvisor"/>

        <testContextProviderNew language="JavaScript" implementation="cc.unitmesh.ide.webstorm.provider.testing.JavaScriptWriteTestService"/>
        <testContextProviderNew language="Typescript" implementation="cc.unitmesh.ide.webstorm.provider.testing.JavaScriptWriteTestService"/>
    </extensions>
</idea-plugin>
